{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
